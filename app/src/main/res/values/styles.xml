<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TitleText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_super_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="SubtitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/black_60</item>
    </style>
    <style name="SubtitleText.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="ItemSingleTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/font_bigger</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ItemTitle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>
    <style name="ItemTitle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSubtitle">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>
    <style name="ItemSubtitle.Accent">
        <item name="android:textColor">@color/lipstick</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSubtitle.Vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/margin</item>
        <item name="android:paddingEnd">@dimen/margin</item>
    </style>

    <style name="ItemSpecial">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/font_std</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GameScore">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lipstick</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_super_size</item>
    </style>

    <style name="BigButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingTop">@dimen/big_font_padding</item>
        <item name="android:paddingBottom">@dimen/big_font_padding</item>
        <item name="android:textSize">@dimen/font_std</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.053</item>
    </style>
    <style name="BigButton.AccentTheme">
        <item name="android:theme">@style/AccentButtonTheme</item>
        <item name="theme">@style/AccentButtonTheme</item>
    </style>
    <style name="AccentButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/accent_button</item>
        <item name="colorAccent">@color/accent_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="HeaderText.Bold">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_big</item>
    </style>

    <style name="DefaultTextInputLayout" parent="@style/Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/double_margin</item>
        <item name="passwordToggleTint">@color/black_60</item>
    </style>

    <style name="DefaultEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/font_edit_text</item>
    </style>

    <style name="ButtonHeader">
        <item name="android:paddingStart">2dp</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/black_60</item>
    </style>

    <style name="StandardCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
    </style>

</resources>
